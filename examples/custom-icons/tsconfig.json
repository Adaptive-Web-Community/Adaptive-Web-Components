{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "types": ["node"],
        "baseUrl": ".",
        "importHelpers": true,
        "lib": ["DOM", "ES2020"],
        "outDir": "dist/esm"
    },
    "include": ["src"]
}
