{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strict": true,
        "target": "ES2020",
        "types": ["node"]
    }
}
