{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["DOM"],
        "module": "ES2020",
        "moduleResolution": "Node16",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2020",
        "types": ["node"],
        "declarationDir": "dist/dts",
        "outDir": "dist/esm"
    },
    "include": ["src/**/*.ts"]
}
